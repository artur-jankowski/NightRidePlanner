{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch localhost",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}/night-ride-planner"
        },
        {
            "type": "firefox",
            "request": "attach",
            "name": "Attach to Firefox",
            "url": "http://localhost:4200",
            "port": 4200,
            "webRoot": "${workspaceFolder}/night-ride-planner"
        }
    ]
}